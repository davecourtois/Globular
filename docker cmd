# build image
sudo docker build -t globular_linux_64_img .

# create volume to keep data persistent between container.
sudo volume create data:/globular/data
sudo volume create config:/globular/config
sudo volume create webroot:/globular/webroot

# Run the image in the container.
sudo docker run -p 10000-10100:10000-10100 -p 8080:8080 -p 9090:9090 -p 27017:27017 -v config:/globular/config -v data:/globular/data -v webroot:/globular/webroot globular_linux_64_img

# Run a shell and iteract with the linux container.
sudo docker exec -it containaner_name_here bash

# get list of container.
sudo docker container ls

# kill container
sudo docker container kill containaner_name_here

# Remove an image
sudo docker image rm -f my_image

# Push image on docker hub

# log yourself to docker
sudo docker login -u davecourtois -p ******

# first you must tag the image #84... with the name on the hub.
sudo docker tag 84aa70fb4678 davecourtois/globular

# now you can push the image on the hub.
sudo docker push davecourtois/globular

# Pull image from the hub.



